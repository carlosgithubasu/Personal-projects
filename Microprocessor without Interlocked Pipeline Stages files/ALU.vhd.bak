LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

ENTITY ALU IS
	PORT (CTL: IN STD_LOGIC_VECTOR(2 DOWNTO 0); 
			A : IN STD_LOGIC_VECTOR (31 DOWNTO 0);
			B : IN STD_LOGIC_VECTOR (31 DOWNTO 0);
			Z : OUT STD_LOGIC;
			RESULT: OUT STD_LOGIC_VECTOR (4 DOWNTO 0));
			
			
END ALU; 

ARCHITECTURE BEHAVIORAL OF ALU IS

BEGIN

PROCESS(A,B,CTL)
BEGIN

	CASE CTL IS 
		WHEN "000" => RESULT <= A AND B; --A & B
		WHEN "001" => RESULT <= A OR B;  --A || B
		WHEN "010" => RESULT <= STD_LOGIC_VECTOR(UNSIGNED(A) + UNSIGNED(B));
		WHEN "100" => RESULT <= A;
		WHEN "101" => 
		WHEN "110" => RESULT <= STD_LOGIC_VECTOR(UNSIGNED(A) - UNSIGNED(B));
		WHEN "111" => RESULT <= IF (A < B) THEN RESULT <= (OTHERS => '1') ELSE  RESULT <= (OTHERS => '0') END IF;
	END CASE;
		
