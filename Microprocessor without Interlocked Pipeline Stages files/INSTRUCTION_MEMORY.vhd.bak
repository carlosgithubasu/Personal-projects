LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

ENTITY INSTRUCTION_MEMORY IS
	PORT ( ADDRESS : IN STD_LOGIC_VECTOR ( 4 DOWNTO 0 );
			 INSTRUCTION : OUT STD_LOGIC_VECTOR ( 31 DOWNTO 0 ));
END INSTRUCTION_MEMORY;

ARCHITECTURE BEHAVIORAL OF INSTRUCTION_MEMORY IS 

SUBTYPE INSTRUCTION_REGISTER IS STD_LOGIC_VECTOR( 31 DOWNTO 0 );
TYPE MEMORY IS ARRAY ( 0 TO 31 ) OF INSTRUCTION_REGISTER;
SIGNAL INSTRUCTION_STORAGE : MEMORY := ( OTHERS => ( OTHERS => '0') );


BEGIN
PROCESS (ADDRESS) 
BEGIN
	
	INSTRUCTION <= INSTRUCTION_STORAGE(TO_INTEGER(UNSIGNED(ADDRESS)));
END PROCESS;
END BEHAVIORAL;
