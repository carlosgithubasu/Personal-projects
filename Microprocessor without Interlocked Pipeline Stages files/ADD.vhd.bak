LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

ENTITY ADD IS 
PORT( A,B : IN UNSIGNED ( 31 DOWNTO 0);
		C : OUT UNSIGNED ( 31 DOWNTO 0));
END ADD;

ARCHITECTURE EQUATIONS OF ADD IS

BEGIN
	PROCESS(A,B)
		BEGIN
		C <= A + B;
	END PROCESS;
	
END EQUATION;



   